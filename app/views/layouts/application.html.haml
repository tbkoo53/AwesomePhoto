!!! 5
%html
%head
  %title Awesome Photo
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
%body
  %nav.navbar.navbar-default
    .container
      .navbar-brand= link_to "Awesome Photo", root_path
      
      -if user_signed_in?
        %ul.nav.navbar-nav.navbar-right
          %li
            = link_to new_pin_path do
              %i.fa.fa-plus
              
          %li
            = link_to edit_user_registration_path do
              %i.fa.fa-cog
              
          %li= link_to "SignOut", destroy_user_session_path, method: :delete
      -else
        %ul.nav.navbar-nav.navbar-right
          %li= link_to "SignUp", new_user_registration_path
          %li= link_to "SignIn", new_user_session_path
      
  .container
    - flash.each do |name, msg|
      = content_tag :div, msg, class: "alert alert-info"
    = yield

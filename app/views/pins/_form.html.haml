= simple_form_for @pin, html: { multipart: true } do |f|
	- if @pin.errors.any?
		#errors
			%h2
				= pluralize(@pin.errors.count, "error")
				prevented this Pin from saving
			%ul
				- @pin.errors.full_messages.each do |msg|
					%li= msg
					
					
	
	.preview
	
	.form-group
		= f.input :photo, input_html: { class: 'form-control', type: 'file' }
	
	.form-group
		= f.input :title, input_html: { class: 'form-control' }
	
	.form-group
		= f.input :description, input_html: { class: 'form-control' }
		
	.form-group
		= f.label :category_list, input_html: { class: 'form-control' }
		= text_field_tag 'pin[category_list]', @pin.category_list.join('.')

	= f.button :submit, class: "btn btn-primary"
